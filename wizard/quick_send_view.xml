<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="form_bot_quick_send_wizard">
            <field name="name">Form Bot Quick Send</field>
            <field name="model">bot.quick_send_wizard</field>
            <field name="arch" type="xml">
                <form string="Envío rápido">
                    <sheet>
                        <group>
                            <field name="text" placeholder="Escribe tu mensaje aquí"/>
                            <field name="bot_id" placeholder="Bot Messenger"/>
                        </group>
                        <button name="send_messages" string="Enviar Mensajes" type="object"/>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
